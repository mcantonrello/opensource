<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textSize="24sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/emailEditText1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/passwordEditText1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:id="@+id/termsCheckBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept Terms and Conditions"
        android:textColor="#666666"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/signInButton1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Log In"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/googleSignInButton1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign In with Google"
        android:backgroundTint="#DB4437"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_google"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"
        android:textColor="#666666"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/signUpButton1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:backgroundTint="#03DAC5"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>
