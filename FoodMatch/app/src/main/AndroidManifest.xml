<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application

        android:usesCleartextTraffic="true"
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodMatch"
        tools:targetApi="31">

        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ProductSearchActivity"
            android:exported="true" />

        <activity
            android:name=".SupermarketActivity"
            android:exported="true" />

        <!-- Declaración de SignInActivity -->
        <activity
            android:name=".SignUpActivity"
            android:exported="true" />

        <!-- Declaración de SignUpActivity -->
        <activity
            android:name=".SignInActivity"
            android:exported="true" />

        <activity
            android:name=".NavigationActivity"
            android:exported="true" />

        <activity
            android:name=".GroceryListActivity"
            android:exported="true" />

        <activity
            android:name=".ProductComparatorActivity"
            android:exported="true" />

        <activity android:name=".UserProfileActivity"
            android:exported="true" />

        <activity android:name=".EditPasswordActivity"
            android:exported="true" />

        <activity android:name=".DatabaseHelper"
            android:exported="true" />




    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


</manifest>